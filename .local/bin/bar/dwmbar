#!/usr/bin/env sh

trap 'update' 1

delim="|"

status() {
	./wifi
    echo $delim
	./volume
    echo $delim
    ./battery
    echo $delim
    ./memory
    echo $delim
    ./disk
    echo $delim
    ./lang
	echo $delim
    ./clock
}


update() {
    xsetroot -name "$(status | tr '\n' ' ')" &
    wait
}


while :; do
    update
    sleep 1 &
    wait
done
